<h1>TV Bumble</h1>

<form action="/search">
  <textarea name="tvshow"></textarea>
  <button>search</button>
</form>


<form action="/users/" method="get">
  <input type="hidden" name="users">
  <button>View other collections</button>
</form>

<%@users.each do |result|%>

    <a href="/users/<%= result["username"] %>" >
      <%= result["username"] %>
    </a>
<% end %>


<%@user_shows_results.each do |result|%>

    <a href="/get/<%= result["show_id"] %>" >
      <% result["show_id"] %>
      <% Show.find(result["show_id"]).image_url %>
      <img src="<%= Show.find(result["show_id"]).image_url %>" alt="tv show poster">
    </a>

<% end %>
